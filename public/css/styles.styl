body
  font-family 'helvetica'

.clearfix
  clear both

#topSection
  display flex
  flex-direction row
  border-bottom:4px solid black
  padding 20px
  font-weight bold

  .leftCol
    flex 2
    margin-top -10px

    .logo
      vertical-align bottom
      height 40px
      width 40px

    #appName
      font-size 30px
      font-weight bolder


  .rightCol
    flex 5
    form
      input
        margin 0 10px 0 5px
      .topcoat-search-input--large
        vertical-align middle
      .topcoat-range
        vertical-align middle
    .alternatives
      button
        width 40%
        margin-top 5px


.curCity
  margin-left 48px;
  margin-bottom 0
  margin-top -10px

#bottomSection
  display flex
  flex-direction row
  padding 0px 40px
  margin-top -15px

  #forecast
    flex 3
    margin 5px
    padding 0 30px 0 10px

    .forecastDay
      display flex
      flex-direction row
      background #7A9AE5
      border 1px solid #7A9AE5
      -webkit-border-radius: 4px;
      -moz-border-radius: 4px;
      border-radius: 4px;
      margin: 5px 0
      padding:4px
      font-weight bold


      .dayIcon
        float left
        display inline-block

      .temp
        flex 1
        margin-top 4px
        margin-left 10px
        line-heigh 1.4rem


      .date
        flex 2
        text-align right
        margin-right 4px

  #charts
    flex 5
    div
      margin 0 auto 5px



.attribution
  position absolute
  right 0
  bottom 0
  padding 10px